<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OutputActivity"
    android:id="@+id/deadline_layout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/colorNameText"
        android:id="@+id/nameTextView"
        tools:text="Deadline's name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/nameTextView"
        android:id="@+id/subjectNameTextView"
        android:textSize="14dp"
        tools:text="Subject's name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"

        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:id="@+id/endDate_TextView"
        android:textSize="30dp"
        tools:text="17/12/1999"/>

</RelativeLayout>